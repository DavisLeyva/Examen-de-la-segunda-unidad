<SerialhWindow>:
    Screen:
        name: "conexion"
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "ESCUELA DE ING. MECATRÃ“NICA"
                font_size: 60
                color: [0,0,0,1]
                bold: True
                canvas.before:
                    Color: 
                        rgb: [235/255,152/255,28/255,1]
                    Rectangle: 
                        size: self.size
                        pos: self.pos                 
            GridLayout:
                cols:2
                row:3
                Label:
                    text:"Alumno:"
                    color: [0,0,0]
                    font_size: 30
                    bold: True
                    canvas.before:
                        Color: 
                            rgb: [0,0,1]
                        Rectangle: 
                            size: self.size
                            pos: self.pos 
                Label:
                    text:"Davis J. Leyva Argomedo"
                    color: [0,0,0]
                    font_size: 25
                    canvas.before:
                        Color:
                            rgb: [82/255, 178/255, 242/255]
                            #rgb: [9/255, 171/255, 27/255]
                        Rectangle: 
                            size: self.size
                            pos: self.pos                     
                Label:
                    text:"Profesor:"
                    color: [0,0,0]
                    bold: True
                    font_size: 30
                    canvas.before:
                        Color: 
                            rgb: [18/255, 158/255, 5/255]
                        Rectangle: 
                            size: self.size
                            pos: self.pos 
                Label:
                    text:"Ing. Emerson M. Asto Rodriguez"
                    color: [0,0,0]
                    font_size: 25
                    canvas.before:
                        Color: 
                            rgb: [85/255, 196/255, 75/255]
                        Rectangle: 
                            size: self.size
                            pos: self.pos                  
                Label:
                    text:"Ciclo:"
                    color: [0,0,0]
                    bold: True
                    font_size: 30
                    canvas.before:
                        Color: 
                            rgb: [124/255, 51/255, 176/255]
                        Rectangle: 
                            size: self.size
                            pos: self.pos 
                Label:
                    text:"IV"
                    color: [0,0,0]
                    font_size: 25
                    canvas.before:
                        Color: 
                            rgb: [184/255, 109/255, 237/255]
                        Rectangle: 
                            size: self.size
                            pos: self.pos   
            GridLayout:
                id: lista
                cols:1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: root.height*0.2
                canvas.before:
                    Color: 
                        rgb: [0,1,0]
                    Rectangle: 
                        size: self.size
                        pos: self.pos                            
    Principal:
        id: main
        
<Test>:
    Label:
        text: root.puerto
        font_size: 30
        canvas.before:
            Color:
                rgb:[0,.2,.2]
            Rectangle:
                size: self.size
                pos: self.pos     
    Button:
        text: "Conectar"
        font_size: 30
        on_release: root.conectar_puerto(root.puerto)

<Principal>:
    name: "main"
    BoxLayout:
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Monitoreo de  Signos Vitales"
                font_size:50
                color: [0,0,0]
                canvas.before:
                    Color:
                        rgba:  [156/255, 5/255, 88/255, 1]
                    Rectangle:
                        pos: self.pos
                        size: self.size

            GridLayout:
                cols:2
                row:3

                #Labels para la temperatura
                Label:
                    text: "Temperatura"
                    font_size:30
                    color: [0,0,0]
                    canvas.before:
                        Color:
                            rgba:  [7/255, 143/255, 39/255, 1]
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Label:
                    id: pantalla1
                    text: root.lectura1
                    font_size: 35
                    color: [0,0,0]
                    canvas.before:
                        Color:
                            rgba:  [78/255, 212/255, 109/255, 1]
                        Rectangle:
                            pos: self.pos
                            size: self.size

                #Labels para el pulso cardiaco
                Label:
                    text: "Pulso Cardiaco"
                    font_size:30
                    color: [0,0,0]
                    canvas.before:
                        Color:
                            rgba:  [173/255, 0, 173/255, 1]
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Label:
                    id: pantalla
                    text: root.lectura
                    font_size: 35
                    color: [0,0,0]
                    canvas.before:
                        Color:
                            rgba:  [230/255, 142/255, 230/255, 1]
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Label:
                    text:""

                Button:
                    text:"Enviar Datos"
                    color: [0,0,0]
                    font_size: 35
                    background_color:[1,1,1]
                    on_release: root.enviar_datos_a_BD()

        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Datos del paciente"
                font_size:30 
            GridLayout:
                cols:2
                row:3

                Label:
                    text:"Nombre:"
                    font_size: 35
                    color: [0,0,0]
                    canvas.before:
                        Color:
                            rgba:  [4/255, 176/255, 107/255, 1]
                        Rectangle:
                            pos: self.pos
                            size: self.size
                TextInput:
                    id:nombrepaciente
                    multiline: False
                    write_tab: False
                    hint_text:"Agregar el nombre del paciente"

                Label:
                    text:"Apellidos"
                    font_size: 35
                    color: [0,0,0]
                    canvas.before:
                        Color:
                            rgba:  [64/255, 66/255, 194/255, 1]
                        Rectangle:
                            pos: self.pos
                            size: self.size                      
                TextInput:
                    id:apellidopaciente
                    multiline: False
                    write_tab: False
                    hint_text:"Agregar el apellido del paciente"

                Label:
                    text: "DNI:"
                    font_size: 35
                    color: [0,0,0]
                    canvas.before:
                        Color:
                            rgba:  [130/255, 123/255, 138/255, 1]
                        Rectangle:
                            pos: self.pos
                            size: self.size                          
                TextInput:
                    id:dnipaciente
                    multiline: False
                    write_tab: False
                    input_filter: "int"
                    hint_text:"Poner la DNI del paciente"

                Label:
                    text: "Edad"
                    font_size: 35
                    color: [0,0,0]
                    canvas.before:
                        Color:
                            rgba:  [252/255, 164/255, 0, 1]
                        Rectangle:
                            pos: self.pos
                            size: self.size                   
                TextInput:
                    id:edadpaciente
                    multiline: False
                    write_tab: False
                    input_filter: "int"
                    hint_text:"Poner la edad del paciente"
